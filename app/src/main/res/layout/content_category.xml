<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.com.example.foodie.foodieandroid.Activities.CategoryActivity"
    tools:showIn="@layout/activity_category">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp">

        <ImageView
            android:id="@+id/cat_chinese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/s_chinese" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cat_chinese"
            android:background="@drawable/gradient_background"
            android:padding="6dp"
            android:text="Chinese"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textStyle="italic" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/cat_vegetarian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/s_vegetarian" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cat_vegetarian"
            android:background="@drawable/gradient_background"
            android:padding="6dp"
            android:text="Vegetarian"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textStyle="italic" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/cat_desserts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/s_sweets" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cat_desserts"
            android:background="@drawable/gradient_background"
            android:padding="6dp"
            android:text="Desserts"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textStyle="italic" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/cat_meatlover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/s_meatlover" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cat_meatlover"
            android:background="@drawable/gradient_background"
            android:padding="6dp"
            android:text="Meatlover"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:textStyle="italic" />
    </RelativeLayout>

</LinearLayout>
